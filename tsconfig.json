{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"allowJs": true,
		"rootDir": "./src",
		"typeRoots": ["./src/@types", "node_modules/@types"],
		"outDir": "./dist"
	}
}
